<%-include ('../_layouts/adminheader') %>
    <h1>Add Page</h1>
    <a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
    <br/><br/>
    <form method="post" action="/admin/pages/add-page">
        <div class="form-group">
            <label for="">Title</label>
            <input type="text" class="form-control" placeholder="Title.." vlaue="<%= title %>" name="title">
        </div>
        <div class="form-group">
            <label for="">Slug</label>
            <input type="text" class="form-control" placeholder="Slug.." vlaue="<%= slug %>" name="slug">
        </div>
        <div class="form-group">
            <label for="">Content</label>
            <textarea class="form-control" cols="30" rows="5" name="content"><%= content %></textarea>
        </div>
        <button class="btn btn-default" type="submit">Submit</button>
    </form>
    <%- include('../_layouts/adminfooter'); %>